<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:text="弹幕设置"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开关"
                    />
                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:id="@+id/isShow_switch"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="位置"
                    />
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/danmu_position"
                    >
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="左上"
                        android:checked="true"
                        android:id="@+id/danmu_position_lt"
                        />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="左下"
                        android:id="@+id/danmu_position_lb"
                        />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="右上"
                        android:id="@+id/danmu_position_rt"
                        />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="右下"
                        android:id="@+id/danmu_position_rb"
                        />

                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="字体"
                    />
                <Button
                    android:layout_width="32dp"
                    android:layout_height="40dp"
                    android:text="-"
                    android:padding="0dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/fontsize_minus"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/fontsize_textview"
                    />
                <Button
                    android:layout_width="32dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:padding="0dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/fontsize_add"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="视窗宽度"
                    />
                <Button
                    android:layout_width="32dp"
                    android:layout_height="40dp"
                    android:text="-"
                    android:padding="0dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/width_minus"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.2"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/width_textview"

                    />
                <Button
                    android:layout_width="32dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:padding="0dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/width_add"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="视窗高度"
                    />
                <Button
                    android:layout_width="32dp"
                    android:layout_height="40dp"
                    android:text="-"
                    android:padding="0dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/height_minus"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.8"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/height_textview"
                    />
                <Button
                    android:layout_width="32dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:padding="0dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/height_add"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:padding="16dp"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="完成"
                    android:id="@+id/dialog_cancel_btn"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>