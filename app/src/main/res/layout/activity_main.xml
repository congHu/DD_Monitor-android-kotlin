<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/main_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#31363b"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:background="@android:color/transparent"
                    android:textColor="#ffffff"
                    android:text="&#xe618;"
                    android:id="@+id/refresh_btn"
                    />
                <Button
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:background="@android:color/transparent"
                    android:textColor="#ffffff"
                    android:text="&#xe606;"
                    android:id="@+id/volume_btn"
                    />
                <Button
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:background="@android:color/transparent"
                    android:textColor="#ffffff"
                    android:text="&#xe696;"
                    android:id="@+id/danmu_btn"
                    />
                <Button
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:background="@android:color/transparent"
                    android:textColor="#ffffff"
                    android:text="画质"
                    android:textSize="11sp"
                    android:id="@+id/qn_btn"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
                <Button
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:background="@android:color/transparent"
                    android:textColor="#ffffff"
                    android:text="&#xe69d;"
                    android:id="@+id/about_btn"
                    />
                <Button
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:background="@android:color/transparent"
                    android:textColor="#ffffff"
                    android:text="&#xe645;"
                    android:id="@+id/timer_btn"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:id="@+id/timer_textview"
                    android:textSize="11sp"
                    />
                <Button
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:background="@android:color/transparent"
                    android:textColor="#ffffff"
                    android:text="&#xe664;"
                    android:id="@+id/landscape_btn"
                    />
                <Button
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:background="@android:color/transparent"
                    android:textColor="#ffffff"
                    android:text="&#xebe5;"
                    android:id="@+id/layout_btn"
                    />
                <Button
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:background="@android:color/transparent"
                    android:textColor="#ffffff"
                    android:text="UP"
                    android:id="@+id/uplist_btn"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="取消拖动"
                android:textAlignment="center"
                android:gravity="center"
                android:id="@+id/cancel_drag_view"
                android:textColor="#fff"
                android:background="@color/teal_700"
                android:visibility="gone"
                />
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/stack_view"
            android:orientation="vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="end"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:id="@+id/drawer_content"
        android:orientation="vertical"
        android:background="#31363b"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:text="列表"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加"
                android:id="@+id/add_up_btn"
                />
        </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/up_list_view"
            />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>