    <ListView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent=".8"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintWidth_percent=".2"
        android:id="@+id/danmu_listView"
        android:background="#99000000"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#99000000"
        android:orientation="horizontal"
        android:id="@+id/player_control_bar"
        >
        <Button
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:background="@android:color/transparent"
            android:textColor="#ffffff"
            android:text="&#xe618;"
            android:id="@+id/refresh_btn"
            />
        <Button
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:background="@android:color/transparent"
            android:textColor="#ffffff"
            android:text="&#xe606;"
            android:id="@+id/volume_btn"
            />
        <Button
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:background="@android:color/transparent"
            android:textColor="#ffffff"
            android:text="&#xe696;"
            android:id="@+id/danmu_btn"
            />
        <Button
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:background="@android:color/transparent"
            android:textColor="#ffffff"
            android:text="流畅"
            android:textSize="11sp"
            android:id="@+id/qn_btn"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="#"
            android:padding="0dp"
            android:paddingStart="4dp"
            android:background="@android:color/transparent"
            android:textAlignment="textStart"
            android:id="@+id/player_name_btn"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/player_control_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent=".5"
        app:layout_constraintHorizontal_bias="0"
        android:background="#90000000"
        android:orientation="horizontal"
        android:visibility="invisible"
        android:id="@+id/volume_bar"
        >
        <Button
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:background="@android:color/transparent"
            android:textColor="#ffffff"
            android:text="&#xe607;"
            android:id="@+id/mute_btn"
            />
        <com.google.android.material.slider.Slider
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:layout_weight="1"
            android:id="@+id/volume_slider"
            android:valueFrom="0"
            android:valueTo="100"
            android:value="100"
            android:stepSize="1"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>