    android:layout_height="match_parent"
    android:background="#000000"
    >

    <com.google.android.exoplayer2.ui.PlayerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dd_player_view"
        app:use_controller="false"

        />

